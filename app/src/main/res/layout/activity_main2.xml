<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.jorgeyya.ejuno.MainActivity">

    <RelativeLayout
        android:layout_width="368dp"
        android:layout_height="495dp"
        tools:layout_editor_absoluteX="7dp"
        tools:layout_editor_absoluteY="16dp">

        <TextView
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/recoge_edad"
            android:layout_below="@+id/tx_saluda"
            android:layout_marginTop="55dp"
            android:text="Edad:"
            tools:layout_editor_absoluteX="16dp"
            tools:layout_editor_absoluteY="52dp" />

        <TextView
            android:id="@+id/tx_saluda"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Hola"
            tools:layout_editor_absoluteX="198dp"
            tools:layout_editor_absoluteY="16dp"
            android:layout_alignParentTop="true"
            android:layout_toEndOf="@+id/btn_continuar"
            android:layout_marginStart="29dp" />

        <EditText
            android:id="@+id/recoge_edad"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="18dp"
            android:ems="10"
            android:inputType="number"
            tools:layout_editor_absoluteX="16dp"
            tools:layout_editor_absoluteY="69dp"
            android:layout_below="@+id/textView"
            android:layout_alignStart="@+id/btn_continuar" />

        <Button
            android:id="@+id/btn_continuar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/recoge_edad"
            android:layout_marginStart="24dp"
            android:layout_marginTop="30dp"
            android:text="Continuar"
            tools:layout_editor_absoluteX="148dp"
            tools:layout_editor_absoluteY="172dp" />
    </RelativeLayout>

</android.support.constraint.ConstraintLayout>
